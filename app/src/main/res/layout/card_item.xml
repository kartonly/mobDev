<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/top16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m8"
        android:paddingStart="@dimen/top16"
        android:paddingEnd="@dimen/top16"
        android:paddingBottom="@dimen/m12"
        tools:ignore="MissingConstraints"
        android:background="@drawable/round_angles"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/portrait"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:layout_marginTop="@dimen/m12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:id="@+id/name"
            app:layout_constraintStart_toEndOf="@id/portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/f16"
            android:layout_marginTop="@dimen/m10"
            android:layout_marginStart="@dimen/top16"
            android:text=""
            android:textColor="@color/grey"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/f14"
            android:textColor="@color/grey"
            app:layout_constraintStart_toEndOf="@id/portrait"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginStart="@dimen/top16"
            android:text=""
            >

        </TextView>

        <TextView
            android:id="@+id/cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/years"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/m18"
            android:layout_marginStart="@dimen/top16"
            android:layout_marginEnd="@dimen/top16"
            android:textSize="@dimen/f16"
            android:textColor="@color/greyL"
            android:text=""
            >

        </TextView>

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cut"
            android:layout_marginTop="@dimen/m8"
            android:textSize="@dimen/f10"
            android:textColor="@color/blue"
            android:layout_marginBottom="@dimen/m4"
            android:text=""
            >

        </TextView>

        <Button
            android:id="@+id/like"
            android:layout_width="@dimen/top24"
            android:layout_height="@dimen/top24"
            android:layout_marginTop="@dimen/m4"
            android:layout_marginEnd="@dimen/m12"
            android:background="@drawable/like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cut"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>